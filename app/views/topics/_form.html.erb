<%= form_for [topic] do |f| %>
      <% if topic.errors.any? %>
      <div class="alert alert-danger">
       <h4>There are <%= pluralize(topic.errors.count, "error") %>.</h4>
       <ul>
         <% topic.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <div class="col-xs-8">
   <%= form_group_tag(topic.errors[:title]) do %>
     <p>
     <%= f.label "Topic: " %>
     <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
   </p>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save Topic", class: 'btn btn-success' %>
   </div>
 </div>
 <% end %>