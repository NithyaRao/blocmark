<div class="container">
  <ul class="nav nav-pills">
      <li>  <% if policy(Bookmark.new).create? %>
                   <%= link_to new_topic_bookmark_path(@topic.id) do %>
                   <span class="glyphicon glyphicon-plus"></span> New Bookmark
                   <%end %>
            <% end %>
      </li>
      <li>  <% if policy(@topic).destroy? %>
                  <%= link_to @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } do %> 
                   <span class="glyphicon glyphicon-trash"></span> Delete Topic   
                  <% end %>
           <% end %>
      </li>  
     </ul>   
<%= render partial: 'topics/topic', locals: { topic: @topic, bookmarks: @topic.bookmarks } %> 
</div>   